{
  "name": "projectname",
  "image": "mcr.microsoft.com/devcontainers/dotnet:10.0",
  "features": {
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-dotnettools.csdevkit",
        "jeremycaron.csharp-organize-usings",
        "dbaeumer.vscode-eslint",
        "EditorConfig.EditorConfig"
      ],

      "settings": {
        "csharp.experimental.debug.hotReload": true,
        "csharpOrganizeUsings.splitGroups": false
     }
    }
  },
  "remoteEnv": {
    "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
  },
  "initializeCommand": "touch .devcontainer/.env",
  "runArgs": [
    "--env-file",
    ".devcontainer/.env"
  ],
  "updateContentCommand": {
    //"restore-dotnet-tools": "dotnet tool restore --tool-manifest .config/dotnet-tools.json"
  },
  "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/post-create.sh"
}
